@model TrashCollectorWebApp.Models.Customer

@{
    ViewData["Title"] = "ChangePickUpDay";
    Layout = "~/Views/Shared/_customerLayout.cshtml";
}

<h1>ChangePickUpDay</h1>

<h4>Customer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ChangePickUpDay">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                
                <input type="hidden" asp-for="CustomerId" class="form-control" />
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input type="hidden" asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input type="hidden" asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input type="hidden" asp-for="AddressLine1" class="form-control" />
                <span asp-validation-for="AddressLine1" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input type="hidden" asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input type="hidden" asp-for="State" class="form-control" />
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input type="hidden" asp-for="ZIP" class="form-control" />
                <span asp-validation-for="ZIP" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DayOfTheWeek" class="control-label"></label>
                <select asp-for="DayOfTheWeek" class="form-control" asp-items='new SelectList(Model.DaysOfTheWeek,"Value", "Text")'></select>                
                <span asp-validation-for="DayOfTheWeek" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input type="hidden" asp-for="ExtraPickUpDate" class="form-control" />
                <span asp-validation-for="ExtraPickUpDate" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input type="hidden" asp-for="Balance" class="form-control" />
                <span asp-validation-for="Balance" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input type="hidden" asp-for="TemporarySuspendStart" class="form-control" />
                <span asp-validation-for="TemporarySuspendStart" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input type="hidden" asp-for="TemporarySuspendEnd" class="form-control" />
                <span asp-validation-for="TemporarySuspendEnd" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input type="hidden" asp-for="IdentityUserId" class="form-control" />
                <span asp-validation-for="IdentityUserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

