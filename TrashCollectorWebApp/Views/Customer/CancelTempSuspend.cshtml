@model TrashCollectorWebApp.Models.Customer

@{
    ViewData["Title"] = "CancelTempSuspend";
    Layout = "~/Views/Shared/_customerLayout.cshtml";
}

<h1>Cancel The Temporary Suspension of Pick Up Services</h1>

<h3>Are you sure you want to cancel this?</h3>
<div>
    <h4></h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TemporarySuspendStart)
        </dt>
        <dd class = "col-sm-10">
            @Html.Raw(Model.TemporarySuspendStart.ToShortDateString())
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TemporarySuspendEnd)
        </dt>
        <dd class = "col-sm-10">
            @Html.Raw(Model.TemporarySuspendEnd.ToShortDateString())
        </dd>
    </dl>
    
    <form asp-action="CancelTempSuspend">
        <input type="submit" value="Cancel" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
