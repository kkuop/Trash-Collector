@model TrashCollectorWebApp.Models.Customer

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_customerLayout.cshtml";
}

<h1>Welcome @Html.DisplayFor(model => model.FirstName),</h1>

<div>
    <h4>What would you like to do today?</h4>
    <hr />
    <h3>Amount Due: $@Html.DisplayFor(model => model.Balance)</h3>
    <ul class="row">
        <li class="col-sm-12">
            <a class="text-dark" asp-area="" asp-controller="Customer" asp-action="PayBill">Pay My Bill</a>            
        </li>
        <li class = "col-sm-12">
            <a class="text-dark" asp-area="" asp-controller="Customer" asp-action="OneTimePickUp">Schedule a One-Time Pick Up</a>
        </li>
        <li class = "col-sm-12">
            <a class="text-dark" asp-area="" asp-controller="Customer" asp-action="TemporarySuspend">Temporarily Suspend All Pick Ups</a>
        </li>
        <li class = "col-sm-12">
            @Html.ActionLink("Edit Profile","Edit", new { id = Model.CustomerId})
        </li>

    </ul>
</div>
