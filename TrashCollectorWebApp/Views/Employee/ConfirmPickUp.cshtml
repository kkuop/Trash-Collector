@model TrashCollectorWebApp.Models.Customer

@{
    ViewData["Title"] = "ConfirmPickUp";
    Layout = "~/Views/Shared/_employeeLayout.cshtml";
}

<h1>Confirm Pick Up</h1>

<h3>Please confirm you have picked up the following customers trash!</h3>
<div>
    <h4>Customer</h4>
    <hr />
    <dl class="row">

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AddressLine1)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AddressLine1)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
    </dl>
    
    <form asp-action="ConfirmPickUp">
        <input type="submit" value="Confirm" class="btn btn-success" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
